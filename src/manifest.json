{
    "name": "YouTubeStopwatch",
    "version": "0.0.3",
    "description": "A chrome extension that is used to help users plan, monitor, control their YouTube usage.",
    "background": {
        "scripts": [
            "js/background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.youtube.com/*"
            ],
            "js": [
                "js/jquery-3.4.1.min.js",
                "js/jquery-ui.min.js",
                "js/jquery.validate.min.js",
                "js/content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "web_accessible_resources": [
        "img/hourglass.png",
        "audio/time_is_now.mp3",
        "audio/munchausen.mp3"
    ],
    "permissions": [
        "storage",
        "tabs",
        "notifications",
        "*://*.youtube.com/*"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "32": "img/extension-icon.png"
        },
        "default_title": "YouTubeStopwatch"
    },
    "icons": {
        "128": "img/extension-icon.png"
    },
    "manifest_version": 2
}